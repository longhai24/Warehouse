<script type="text/javascript" src="jquery-3.3.1.min.js"></script>
<script type="text/javascript">
	
	
	$("#a1").click(function() {
		$.ajax({
			url:"AirAction",
			data:{method:"FirPage"},
			type:"post",
			dataType:"json",
			success: function(data) {
				traversal(data)
			}
		})
		return false;
	})
	$("#a4").click(function() {
		$.ajax({
			url:"AirAction",
			data:{method:"LasPage"},
			type:"post",
			dataType:"json",
			success: function(data) {
				traversal(data)
			}
		})
		return false;
	})
	$("#a2").click(function() {
		$.ajax({
			url:"AirAction",
			data:{method:"DownPage"},
			type:"post",
			dataType:"json",
			success: function(data) {
				traversal(data)
			}
		})
		return false;
	})
		$("#a3").click(function() {
		$.ajax({
			url:"AirAction",
			data:{method:"UpPage"},
			type:"post",
			dataType:"json",
			success: function(data) {
				traversal(data)
			}
		})
		return false;
	})
	
	function traversal(data) {
				$("tbody tr").remove();
				for (var i = 0; i < data.length; i++) {
					var tr = $("<tr ></tr>")
					var td1 = $("<TD>"+data[i].id+" </TD>")
					var td2 = $("<TD><a href='AirAction?method=tosome&sid="+data[i].id+"'>"+data[i].name+"</a> </TD>")
					var td3 = $("<TD>"+data[i].monitor_time+" </TD>")
					var td4 = $("<TD>"+data[i].pm10+" </TD>")
					var td5 = $("<TD>"+data[i].pm2_5+" </TD>")
					var td6 = $("<TD>"+data[i].monitoring_station+" </TD>")
					var td7 = $("<TD>"+data[i].last_modify_time+" </TD>")
					tr.append(td1).append(td2).append(td3).append(td4).append(td5).append(td6).append(td7)
					$("tbody").append(tr)
				}
	}
</script>
</html>